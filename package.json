{
  "name": "library-manager",
  "version": "1.8.0",
  "private": true,
  "description": "Library Manager - Personal book collection manager",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w desktop",
    "dev:desktop": "npm run dev -w desktop",
    "dev:mobile": "npm run start -w mobile",
    "mobile": "npm run start -w mobile",
    "mobile:ios": "npm run ios -w mobile",
    "mobile:android": "npm run android -w mobile",
    "mobile:web": "npm run web -w mobile",
    "start": "npm run start -w desktop",
    "build": "npm run build -w @library-manager/shared && npm run dist -w desktop",
    "build:desktop": "npm run dist -w desktop",
    "build:shared": "npm run build -w @library-manager/shared",
    "test": "npm run test:unit -w desktop",
    "test:unit": "npm run test:unit -w desktop",
    "test:e2e": "npm run test:e2e -w desktop",
    "publish": "npm run publish -w desktop",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0"
  }
}
